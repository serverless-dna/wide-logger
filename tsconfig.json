{
    "compilerOptions": {
      "incremental": true,
      "target": "es2020",
      "module": "es2020",
      "declaration": true,
      "sourceMap": true,
      "composite": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "preserveConstEnums": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "rootDir": ".",
      "outDir": "dist"
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
  }